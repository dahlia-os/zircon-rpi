import("//build/host.gni")
import("//build/package.gni")
import("//build/sdk/sdk_host_tool.gni")

executable("bin") {
  output_name = "far"

  sources = [ "main.cc" ]

  deps = [
    "//src/lib/fxl",
    "//src/sys/pkg/lib/far",
  ]
}

sdk_host_tool("bin_sdk") {
  category = "partner"
  output_name = "far"
  deps = [ ":bin" ]
}

package("far") {
  deps = [ ":bin" ]

  binaries = [
    {
      shell = true
      name = "far"
    },
  ]
}

install_host_tools("host") {
  deps = [ ":bin" ]
  outputs = [ "far" ]
}
