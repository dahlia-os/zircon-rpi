group("feedback") {
  testonly = true

  public_deps = [
    ":tests",
    "crash_reports:crash-reports",
    "crasher",
    "feedback_data:feedback_agent",
    "last_reboot:last-reboot",
  ]
}

group("tests") {
  testonly = true

  public_deps = [
    "crash_reports/tests",
    "feedback_data/tests",
    "last_reboot/tests",
  ]
}

group("infra_configs") {
  deps = [ "crash_reports:upload_to_prod_server_config" ]
}

group("production_configs") {
  deps = [ "crash_reports:production_config" ]
}
