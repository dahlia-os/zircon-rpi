group("forensics") {
  testonly = true

  deps = [
    ":tests",
    "bugreport",
    "crash_reports:crash-reports",
    "feedback_data:feedback_agent",
    "last_reboot:last-reboot",
    "//src/developer/exception_broker",
    "//src/developer/feedback",
  ]
}

group("tests") {
  testonly = true

  deps = [
    "bugreport/tests",
    "crash_reports/tests",
    "feedback_data/tests",
    "last_reboot/tests",
    "utils/tests",
    "//src/developer/exception_broker/tests",
  ]
}

